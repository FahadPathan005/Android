                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView2ID"
                        >

                        <ImageView
                            android:id="@+id/confirm2ID"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:padding="5dp"
                            android:background="@color/green"
                            android:src="@drawable/completed" />

                        <ImageView
                            android:id="@+id/reject2ID"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:padding="5dp"
                            android:background="@color/button_red"
                            android:src="@drawable/cancelled" />

                    </LinearLayout>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/ycardView3ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/textView3ID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView3ID"
                        >

                        <ImageView
                            android:id="@+id/confirm3ID"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:padding="5dp"
                            android:background="@color/green"
                            android:src="@drawable/completed" />

                        <ImageView
                            android:id="@+id/reject3ID"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:padding="5dp"
                            android:background="@color/button_red"
                            android:src="@drawable/cancelled" />

                    </LinearLayout>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/ycardView4ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/textView4ID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView4ID"
                        >

                        <ImageView
                            android:id="@+id/confirm4ID"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:padding="5dp"
                            android:background="@color/green"
                            android:src="@drawable/completed" />

                        <ImageView
                            android:id="@+id/reject4ID"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:padding="5dp"
                            android:background="@color/button_red"
                            android:src="@drawable/cancelled" />

                    </LinearLayout>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/ycardView5ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/textView5ID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView5ID"
                        >

                        <ImageView
                            android:id="@+id/confirm5ID"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:padding="5dp"
                            android:background="@color/green"
                            android:src="@drawable/completed" />

                        <ImageView
                            android:id="@+id/reject5ID"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:padding="5dp"
                            android:background="@color/button_red"
                            android:src="@drawable/cancelled" />

                    </LinearLayout>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>

    </ScrollView>

    <!--   bottom navigation bar design   -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_bottom_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_items" />


</androidx.constraintlayout.widget.ConstraintLayout>